                </fieldset>

            </div>


            <fieldset>
                <legend>Alimentos - Kg</legend>


                <div class = "kg-producto">
                    <label for="kilosProducto1">Kg1:</label>
                    <input class="kilosProd" type="number" name="kg" id="kilosProducto1" placeholder="Cantidad de kg - Opcion 1" >
                    <label for="precioProducto1">precio1:</label>
                    <input class="kilosProd" type="number" name="precio" id="precioProducto1" placeholder="Precio por kg - Opcion 1" >
                    <label for="cuotaProducto1">cuotas:</label>
                    <input class="kilosProd" type="number" name="cantCuotasSegunKg" id="cuotasProducto1" placeholder="cuotas por kg - Opcion 1" >
                </div>

                <div class = "kg-producto">
                    <label for="kilosProducto2">Kg2:</label>
                    <input class="kilosProd" type="number" name="kg" id="kilosProducto2" placeholder="Cantidad de kg - Opcion 2" >
                    <label for="precioProducto2">precio2:</label>
                    <input class="kilosProd" type="number" name="precio" id="precioProducto2" placeholder="Precio por kg - Opcion 2" >
                    <label for="cuotaProducto2">cuotas:</label>
                    <input class="kilosProd" type="number" name="cantCuotasSegunKg" id="cuotasProducto2" placeholder="cuotas por kg - Opcion 2" >
                </div>

                <div class = "kg-producto">
                    <label for="kilosProducto3">Kg3:</label>
                    <input class="kilosProd" type="number" name="kg" id="kilosProducto3" placeholder="Cantidad de kg - Opcion 3" >
                    <label for="precioProducto3">precio3:</label>
                    <input class="kilosProd" type="number" name="precio" id="precioProducto3" placeholder="Precio por kg - Opcion 3" >
                    <label for="cuotaProducto3">cuotas:</label>
                    <input class="kilosProd" type="number" name="cantCuotasSegunKg" id="cuotasProducto3" placeholder="cuotas por kg - Opcion 3" >
                </div>
        
            </fieldset>

            <fieldset>
                <legend>Precio</legend>


                <div class = "precio-producto">
                    <label for="precioProducto">AR$</label>
                    <input class="precioProd" type="number" name="costo" id="precioProducto" placeholder="Precio del producto"  autocomplete="on">

                </div>
        

            </fieldset>


            <fieldset>
                <legend>Descuento</legend>


                <div class = "descuento-producto">
                    <label for="descuentoProducto">%</label>
                    <input class="descuentoProd" type="number" name="descuento" id="descuentoProducto" placeholder="Descuento del producto"  autocomplete="on">

                </div>
        

            </fieldset>


            <fieldset>
                <legend>Cantidad de cuotas</legend>


                <div class = "cuotas-producto">
                    <label for="cuotasProducto">Cuotas:</label>
                    <input class="cuotasProd" type="number" name="cantidadCuotas" id="cantidadCuotas" placeholder="Cantidad de cuotas del producto" >

                </div>
        

            </fieldset>


